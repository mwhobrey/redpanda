{
  "name": "RedPanda High Contrast",
  "type": "dark",
  "colors": {
    "editor.background": "#000000",
    "editor.foreground": "#FFFFFF",
    "activityBarBadge.background": "#F73B45",
    "sideBarTitle.foreground": "#FFFFFF",
    "list.activeSelectionBackground": "#5E696E",
    "list.inactiveSelectionBackground": "#333333",
    "list.hoverBackground": "#444444",
    "list.dropBackground": "#5E696E",
    "sideBar.background": "#111111",
    "sideBar.foreground": "#FFFFFF",
    "sideBarSectionHeader.background": "#222222",
    "sideBarSectionHeader.foreground": "#FFFFFF",
    "editorGroup.border": "#444444",
    "editorGroupHeader.tabsBackground": "#111111",
    "tab.inactiveBackground": "#222222",
    "tab.activeBackground": "#000000",
    "statusBar.background": "#111111",
    "statusBar.noFolderBackground": "#111111",
    "statusBar.foreground": "#FFFFFF"
  },
  "tokenColors": [
    {
      "name": "Comment",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#7CAEE5"
      }
    },
    {
      "name": "Variables",
      "scope": ["variable", "string constant.other.placeholder"],
      "settings": {
        "foreground": "#FFFFFF"
      }
    },
    {
      "name": "Colors",
      "scope": ["constant.other.color"],
      "settings": {
        "foreground": "#E3E6E8"
      }
    },
    {
      "name": "Invalid",
      "scope": ["invalid", "invalid.illegal"],
      "settings": {
        "foreground": "#FB9DA2"
      }
    },
    {
      "name": "Keyword, Storage",
      "scope": ["keyword", "storage.type", "storage.modifier"],
      "settings": {
        "foreground": "#E59DC9"
      }
    },
    {
      "name": "Operator, Misc",
      "scope": [
        "keyword.control",
        "constant.other.color",
        "punctuation",
        "meta.tag",
        "punctuation.definition.tag",
        "punctuation.separator.inheritance.php",
        "punctuation.definition.tag.html",
        "punctuation.definition.tag.begin.html",
        "punctuation.definition.tag.end.html",
        "punctuation.section.embedded",
        "keyword.other.template",
        "keyword.other.substitution"
      ],
      "settings": {
        "foreground": "#7CAEE5"
      }
    },
    {
      "name": "Function, Special Method",
      "scope": [
        "entity.name.function",
        "meta.function-call",
        "variable.function",
        "support.function",
        "keyword.other.special-method"
      ],
      "settings": {
        "foreground": "#7CAEE5"
      }
    },
    {
      "name": "String, Symbols, Inherited Class, Markup Heading",
      "scope": [
        "string",
        "constant.other.symbol",
        "constant.other.key",
        "entity.other.inherited-class",
        "markup.heading",
        "markup.inserted.git_gutter",
        "meta.group.braces.curly constant.other.object.key.js string.unquoted.label.js"
      ],
      "settings": {
        "foreground": "#D2F38C"
      }
    }
  ]
}

